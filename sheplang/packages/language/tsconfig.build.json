{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "composite": true
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": ["dist", "node_modules", "test", "**/*.test.ts"]
}
