{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,
    "composite": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules", "generated"]
}
