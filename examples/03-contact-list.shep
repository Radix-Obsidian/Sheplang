app MyContacts

data Contact:
  fields:
    name: text
    emailAddress: text
    phone: text
    notes: text
  rules:
    - "name is required"
    - "emailAddress must be valid"

view ContactList:
  list Contact
  button "Add Contact" -> AddContact

action AddContact(name, emailAddress, phone, notes):
  add Contact with name, emailAddress, phone, notes
  show ContactList
