app DogReminders

data Reminder:
  fields:
    message: text
    time: datetime
    done: yes/no
  rules:
    - "message is required"
    - "time must be in the future"

view ReminderList:
  list Reminder
  button "Add Reminder" -> AddReminder

action AddReminder(message, time):
  add Reminder with message, time, done=false
  show ReminderList
