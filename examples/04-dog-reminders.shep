app DogReminders

data Reminder:
  fields:
    text: text
    time: datetime
    done: yes/no
  rules:
    - "text is required"
    - "time must be in the future"

view ReminderList:
  list Reminder
  button "Add Reminder" -> AddReminder

action AddReminder(text, time):
  add Reminder with text, time, done=false
  show ReminderList
